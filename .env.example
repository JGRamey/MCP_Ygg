# MCP Yggdrasil Environment Configuration Example
# Copy this file to .env and update with your values

# Application Settings
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Security (REQUIRED - Generate strong keys for production!)
SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE=30
REFRESH_TOKEN_EXPIRE=7

# Neo4j Database (REQUIRED)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONN_LIFETIME=3600
NEO4J_POOL_SIZE=50

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_HTTPS=false
QDRANT_TIMEOUT=5

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10
REDIS_DECODE_RESPONSES=true

# External APIs (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
YOUTUBE_API_KEY=

# RabbitMQ Message Queue
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=mcp_events

# Celery Task Queue
CELERY_BROKER=redis://localhost:6379/0
CELERY_RESULT=redis://localhost:6379/1
CELERY_SERIALIZER=json
CELERY_ACCEPT=json
CELERY_TIMEZONE=UTC

# Performance & Caching
ENABLE_CACHING=true
CACHE_TTL=300
CACHE_MAX_SIZE=1000
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring & Observability
ENABLE_MONITORING=true
ENABLE_PROFILING=false
PROMETHEUS_PORT=9090
JAEGER_HOST=localhost
JAEGER_PORT=6831
ENABLE_TRACING=true

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,txt,md,json,csv

# Scraping Configuration
SCRAPING_TIMEOUT=30
MAX_SCRAPERS=5
USER_AGENT=MCP-Yggdrasil/1.0