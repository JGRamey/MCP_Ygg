# MCP Yggdrasil Production Environment Configuration
# Copy this file to .env.production and update with your values

# Application Settings
ENV=production
DEBUG=false
LOG_LEVEL=WARNING

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=https://yggdrasil.example.com

# Security (REQUIRED - Use strong keys!)
SECRET_KEY=your-production-secret-key-generate-with-openssl
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE=30
REFRESH_TOKEN_EXPIRE=7

# Neo4j Database Cluster
NEO4J_URI=bolt+routing://neo4j-cluster:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=strong-production-password
NEO4J_DATABASE=yggdrasil
NEO4J_MAX_CONN_LIFETIME=3600
NEO4J_POOL_SIZE=100

# Qdrant Vector Database
QDRANT_HOST=qdrant.internal
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_HTTPS=true
QDRANT_TIMEOUT=10

# Redis Cluster
REDIS_URL=redis://redis-cluster:6379
REDIS_PASSWORD=redis-cluster-password
REDIS_MAX_CONNECTIONS=50
REDIS_DECODE_RESPONSES=true

# External APIs
OPENAI_API_KEY=sk-prod-key
ANTHROPIC_API_KEY=anthropic-prod-key
GOOGLE_API_KEY=google-prod-key
YOUTUBE_API_KEY=youtube-prod-key

# RabbitMQ Cluster
RABBITMQ_URL=amqp://yggdrasil:password@rabbitmq-cluster:5672/yggdrasil
RABBITMQ_EXCHANGE=mcp_events

# Celery Task Queue
CELERY_BROKER=redis://redis-cluster:6379/0
CELERY_RESULT=redis://redis-cluster:6379/1
CELERY_SERIALIZER=json
CELERY_ACCEPT=json
CELERY_TIMEZONE=UTC

# Performance & Caching
ENABLE_CACHING=true
CACHE_TTL=600
CACHE_MAX_SIZE=10000
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# Monitoring & Observability
ENABLE_MONITORING=true
ENABLE_PROFILING=false
PROMETHEUS_PORT=9090
JAEGER_HOST=jaeger.monitoring
JAEGER_PORT=6831
ENABLE_TRACING=true

# File Storage (S3-compatible)
UPLOAD_DIR=/mnt/storage/uploads
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,txt,md,json,csv

# Scraping Configuration
SCRAPING_TIMEOUT=60
MAX_SCRAPERS=20
USER_AGENT=MCP-Yggdrasil/1.0 (+https://yggdrasil.example.com)